<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AlarmActivity"
    tools:showIn="@layout/activity_alarm">

    <Button
        android:id="@+id/alertButton"
        android:layout_width="243dp"
        android:layout_height="78dp"
        android:background="#FF9800"
        android:text="Alert Contacts"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="272dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="196dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="30dp"
        tools:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/nightline"
        android:layout_width="211dp"
        android:layout_height="91dp"
        android:text="You can find the number for Nightline on the reverse of your library card, or email on listening@bath.nightline.ac.uk"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="383dp"
        />

    <TextView
        android:id="@+id/samaritans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samaritans: 116 123"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="496dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>